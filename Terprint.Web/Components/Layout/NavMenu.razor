@inject common.AppState.StateContainer.Rating  asRating

@{

    #region appstate load

    if (appstategrower.Growers == null)
    {
        appstategrower.Growers = DB.Grower.ToList();
        //return appstategrower.Growers;
    }
    if (appstatestrain.Strains == null)
    {
        appstatestrain.Strains = DB.Strain.ToList();
    }
    if (appstatebatch.Batches == null)
    {
        appstatebatch.Batches = DB.Batch.ToList();
    }
    if (asTerpeneValue.TerpeneValues == null)
    {
        asTerpeneValue.TerpeneValues = DB.TerpeneValues.ToList();
    }
    if (asTHCValue.THCValues == null)
    {
        asTHCValue.THCValues = DB.THCValues.ToList();
    }
    if (asRatingCategory.RatingCategories == null)
    {
        asRatingCategory.RatingCategories = DB.RatingCategory.ToList();
    }
    if (asRating.Ratings == null)
    {
        asRating.Ratings = DB.Rating.ToList();
    }


    #endregion
}
