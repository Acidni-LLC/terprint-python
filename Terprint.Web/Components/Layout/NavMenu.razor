                <li class="nav-item dropdown" id="myDropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">  Strains menu  </a>
                    <ul class="dropdown-menu">
                        @{
                            List<Strain> GetStrains()
                            {
                                // e.g. Put a database call here
                                if (appstatestrain.Strains == null)
                                {
                                    appstatestrain.Strains = DB.Strain.ToList();
                                    return appstatestrain.Strains;
                                }
                                else
                                {
                                    return appstatestrain.Strains;
                                }
                                // Terprint.common.Strains.GetStrains();

                            }
                            List<Batch> GetBatches(string strain)
                            {
                                // e.g. Put a database call here
                                if (appstatebatch.Batches == null)
                                {
                                    appstatebatch.Batches = DB.Batch.ToList();
                                }

                                // e.g. Put a database call here

                                return appstatebatch.Batches.Where(
                                t => t.StrainID == GetStrains()
                                .Where(t1 => t1.StrainName == strain)
                                .Select(t => t.StrainId)
                                .FirstOrDefault())
                                //.Select(t => t.Name)
                                .ToList();
                                //return Terprint.common.Strains.GetBatches(strain);

                            }
                        }
                        @foreach (var strain in GetStrains().OrderBy(t=>t.StrainName))
                        {
                            string path = "/StrainProfile?strain=" + System.Web.HttpUtility.UrlEncode(strain.StrainName);
                            <li>
                                <NavLink class="dropdown-item" href="@path" Match="NavLinkMatch.All" onclick="location.href=this.href;return true;">@strain.StrainName &raquo;</NavLink>
                                <ul class="submenu dropdown-menu">
                                    @foreach (var batch in GetBatches(strain.StrainName))
                                    {
                                        string urlencoded = System.Web.HttpUtility.UrlEncode(@batch.Name);
                                        path = "/BatchProfile?size=medium&matrix=1&batch=" + @urlencoded;
                                        <li>
                                            <NavLink class="dropdown-item" href="@path" Match="NavLinkMatch.All" onclick="location.href=this.href;return true;">@batch.Name</NavLink>
                                        </li>
                                    }

                                </ul>
                            </li>
                        }

                    </ul>
