@inject Data.TerprintWebContext3 DB
@inject NavigationManager _navigationManager
@inject common.AppState.StateContainer.Strain appstatestrain
@inject common.AppState.StateContainer.Batch appstatebatch
@inject common.AppState.StateContainer.Grower appstategrower
@inject common.AppState.StateContainer.TerpeneValue asTerpeneValue
@inject common.AppState.StateContainer.THCValue asTHCValue
