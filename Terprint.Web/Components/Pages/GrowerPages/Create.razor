@page "/growers/create"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h4>Grower</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Grower" OnValidSubmit="AddGrower" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="Grower.Name" class="form-control" /> 
                <ValidationMessage For="() => Grower.Name" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/growers">Back to List</a>
</div>

@code {

    [SupplyParameterFromForm]
    public Grower Grower { get; set; } = new();

    // To protect from overposting attacks, see https://aka.ms/RazorPagesCRUD
    public async Task AddGrower()
    {
        DB.Grower.Add(Grower);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/growers");
    }
}
