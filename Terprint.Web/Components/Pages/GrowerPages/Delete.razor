@page "/growers/delete"
@attribute [Authorize]
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore
@inject common.AppState.StateContainer.Grower asgrower

<PageTitle>Delete Growers</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Grower</h4>
    <hr />
    @if (grower is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@grower.Name</dd>
        </dl>
        <EditForm method="post" Model="grower" OnValidSubmit="DeleteGrower" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(grower is null)">Delete</button> |
            <a href="/growers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    Grower? grower;

    [SupplyParameterFromQuery]
    public int GrowerId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        grower = await DB.Grower.FirstOrDefaultAsync(m => m.GrowerId == GrowerId);

        if (grower is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteGrower()
    {
        DB.Grower.Remove(grower!);
        await DB.SaveChangesAsync();
        asgrower.Growers.Remove(grower!);
        NavigationManager.NavigateTo("/growers");
    }
}
