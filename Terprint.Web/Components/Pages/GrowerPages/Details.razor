@page "/growers/details"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Grower</h4>
    <hr />
    @if (grower is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@grower.Name</dd>
        </dl>
        <div>
            <a href="@($"/growers/edit?growerid={grower.GrowerId}")">Edit</a> |
            <a href="@($"/growers")">Back to List</a>
        </div>
    }
</div>

@code {
    Grower? grower;

    [SupplyParameterFromQuery]
    public int GrowerId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        grower = await DB.Grower.FirstOrDefaultAsync(m => m.GrowerId == GrowerId);

        if (grower is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
