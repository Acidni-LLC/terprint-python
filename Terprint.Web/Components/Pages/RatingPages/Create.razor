@attribute [Authorize]

@page "/ratings/create"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@inject Terprint.Web.Components.ChooserBatch ChooserBatch
@inject Terprint.Web.Components.ChooserRatingCategory ChooserRatingCategory
@rendermode InteractiveServer
@inject common.AppState appstate

@{

    string title = common.config.appname + " - Create Rating - " + batchdata.batch ;
}
<PageTitle>@title</PageTitle>

<h1>Create</h1>

<h5>Rating</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Rating" OnValidSubmit="AddRating" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />
            <Terprint.Web.Components.ChooserBatch @bind-BatchId="BatchId" @bind-batchdata="batchdata"></Terprint.Web.Components.ChooserBatch>

            <Terprint.Web.Components.ChooserRatingCategory @bind-RatingCategoryId="RatingCategoryId" @bind-RatingValue="RatingValue">

            </Terprint.Web.Components.ChooserRatingCategory>
            @* <div class="mb-3" style="visibility:hidden">
                <label for="BatchId" class="form-label">BatchId:</label>
                <InputNumber id="BatchID" @bind-Value="@batchdata.batchId" class="form-control" />
                <ValidationMessage For="() => Rating.BatchID" class="text-danger" />
            </div>  <div class="mb-3">
            <label for="BatchId" class="form-label">RatingCategoryId:</label>
            <InputNumber id="BatchId" @bind-Value="RatingCategoryId" class="form-control" />
            <ValidationMessage For="() => RatingCategoryId" class="text-danger" />
            </div>
            <div class="mb-3">
            <label for="value" class="form-label">Value:</label>
            <InputNumber id="value" @bind-Value="Rating.Value" class="form-control" />
            <ValidationMessage For="() => Rating.Value" class="text-danger" />
            </div>
            *@
            <div class="mb-3">
                <label for="notes" class="form-label">Notes:</label>
                <InputText id="notes" @bind-Value="Rating.Notes" class="form-control" />
                <ValidationMessage For="() => Rating.Notes" class="text-danger" />
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/ratings">Back to List</a>
</div>

<AuthorizeView>
    <Authorized>
        @{
            Rating.createdby = context.User.Identity?.Name;
        }
    </Authorized>
</AuthorizeView>
@code {
    private string RatingValue { get; set; }
    private int RatingCategoryId { get; set; }

    private ChooserBatch.BatchData bd = new ChooserBatch.BatchData();
    public ChooserBatch.BatchData batchdata
    {
        get {return bd; } 
        set { 
            bd = value;
            Rating.BatchID=value.batchId; }
    }  
    [SupplyParameterFromForm]
    public TerpeneValue TerpeneValue
    {
        get;
        set;
    } = new();
    [SupplyParameterFromForm]
    private int BatchId
    {
        get
        {
            if (Rating.BatchID is null)
            { return 0; }
            else
            { return (int)Rating.BatchID; }
        }
        set { Rating.BatchID = value; }
    }

    [SupplyParameterFromForm]
    public Rating Rating { get; set; } = new();

    // To protect from overposting attacks, see https://aka.ms/RazorPagesCRUD
    public async Task AddRating()
    {
        int batchid = appstate.batchid;
        //Rating.BatchID = TerpeneValue.BatchID;
        Rating.RatingCategoryID = RatingCategoryId;
        Rating.userid =  Rating.createdby; ;
        Rating.Value = RatingValue;


        DB.Rating.Add(Rating);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/ratings");
    }
}
