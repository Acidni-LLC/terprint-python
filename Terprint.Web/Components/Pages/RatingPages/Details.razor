@page "/ratings/details"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Rating</h4>
    <hr />
    @if (rating is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row"> 
            <dt class="col-sm-2">userid</dt>
            <dd class="col-sm-10">@rating.userid</dd>
            <dt class="col-sm-2">RatingCategoryID</dt>
            <dd class="col-sm-10">@rating.RatingCategoryID</dd>
            <dt class="col-sm-2">Value</dt>
            <dd class="col-sm-10">@rating.Value</dd>
            <dt class="col-sm-2">Notes</dt>
            <dd class="col-sm-10">@rating.Notes</dd>
            <dt class="col-sm-2">BatchID</dt>
            <dd class="col-sm-10">@rating.BatchID</dd>
        </dl>
        <div>
            <a href="@($"/ratings/edit?ratingid={rating.RatingId}")">Edit</a> |
            <a href="@($"/ratings")">Back to List</a>
        </div>
    }
</div>

@code {
    Rating? rating;

    [SupplyParameterFromQuery]
    public int RatingId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        rating = await DB.Rating.FirstOrDefaultAsync(m => m.RatingId == RatingId);

        if (rating is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
