@page "/strains/delete"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Strain</h4>
    <hr />
    @if (strain is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">StrainName</dt>
            <dd class="col-sm-10">@strain.StrainName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">StrainDescription</dt>
            <dd class="col-sm-10">@strain.StrainDescription</dd>
        </dl>
        <EditForm method="post" Model="strain" OnValidSubmit="DeleteStrain" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(strain is null)">Delete</button> |
            <a href="/strains">Back to List</a>
        </EditForm>
    }
</div>

@code {
    Strain? strain;

    [SupplyParameterFromQuery]
    public int StrainId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        strain = await DB.Strain.FirstOrDefaultAsync(m => m.StrainId == StrainId);

        if (strain is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteStrain()
    {
        DB.Strain.Remove(strain!);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/strains");
    }
}
