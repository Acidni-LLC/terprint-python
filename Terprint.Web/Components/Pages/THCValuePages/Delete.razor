@page "/thcvalues/delete"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>THCValue</h4>
    <hr />
    @if (thcvalue is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">BatchID</dt>
            <dd class="col-sm-10">@thcvalue.BatchID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@thcvalue.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Value</dt>
            <dd class="col-sm-10">@thcvalue.Value</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Scale</dt>
            <dd class="col-sm-10">@thcvalue.Scale</dd>
        </dl>
        <EditForm method="post" Model="thcvalue" OnValidSubmit="DeleteTHCValue" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(thcvalue is null)">Delete</button> |
            <a href="/thcvalues">Back to List</a>
        </EditForm>
    }
</div>

@code {
    THCValue? thcvalue;

    [SupplyParameterFromQuery]
    public int THCValueId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        thcvalue = await DB.THCValues.FirstOrDefaultAsync(m => m.THCValueId == THCValueId);

        if (thcvalue is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteTHCValue()
    {
        DB.THCValues.Remove(thcvalue!);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/thcvalues");
    }
}
