@page "/thcvalues/details"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details THCValue</PageTitle>

<h1>Details</h1>

<div>
    <h4>THCValue</h4>
    <hr />
    @if (thcvalue is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">BatchID</dt>
            <dd class="col-sm-10">@thcvalue.BatchID</dd>
            <dt class="col-sm-2">Analyte</dt>
            <dd class="col-sm-10">@thcvalue.Analyte</dd>
            <dt class="col-sm-2">Dilution</dt>
            <dd class="col-sm-10">@thcvalue.Dilution</dd>
            <dt class="col-sm-2">LOD</dt>
            <dd class="col-sm-10">@thcvalue.LOD</dd>
            <dt class="col-sm-2">LOQ</dt>
            <dd class="col-sm-10">@thcvalue.LOQ</dd>
            <dt class="col-sm-2">Result</dt>
            <dd class="col-sm-10">@thcvalue.Result</dd>
            <dt class="col-sm-2">Percent</dt>
            <dd class="col-sm-10">@thcvalue.Percent</dd>
        </dl>
        <div>
            <a href="@($"/thcvalues/edit?thcvalueid={thcvalue.THCValueId}")">Edit</a> |
            <a href="@($"/thcvalues")">Back to List</a>
        </div>
    }
</div>

@code {
    THCValue? thcvalue;

    [SupplyParameterFromQuery]
    public int THCValueId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        thcvalue = await DB.THCValues.FirstOrDefaultAsync(m => m.THCValueId == THCValueId);

        if (thcvalue is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
