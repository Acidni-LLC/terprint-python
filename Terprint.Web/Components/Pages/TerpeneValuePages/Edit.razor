@page "/TerpeneValues/edit"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h4>TerpeneValue</h4>
<hr />
@if (TerpeneValue is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="TerpeneValue" OnValidSubmit="UpdateTerpeneValue" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary />
                <input type="hidden" name="TerpeneValue.TerpeneValueId" value="@TerpeneValue.TerpeneValueId" />
                <div class="mb-3">
                    <label for="value" class="form-label">Value:</label>
                    <InputNumber id="value" @bind-Value="TerpeneValue.Value" class="form-control" />
                    <ValidationMessage For="() => TerpeneValue.Value" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="terpenename" class="form-label">TerpeneName:</label>
                    <InputText id="terpenename" @bind-Value="TerpeneValue.TerpeneName" class="form-control" />
                    <ValidationMessage For="() => TerpeneValue.TerpeneName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="batchid" class="form-label">BatchID:</label>
                    <InputNumber id="batchid" @bind-Value="TerpeneValue.BatchID" class="form-control" />
                    <ValidationMessage For="() => TerpeneValue.BatchID" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="scale" class="form-label">Scale:</label>
                    <InputText id="scale" @bind-Value="TerpeneValue.Scale" class="form-control" />
                    <ValidationMessage For="() => TerpeneValue.Scale" class="text-danger" />
                </div> 
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/terpenevalues">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    public int TerpeneValueId { get; set; }

    [SupplyParameterFromForm]
    public TerpeneValue? TerpeneValue { get; set; }

    protected override async Task OnInitializedAsync()
    {
        TerpeneValue ??= await DB.TerpeneValues.FirstOrDefaultAsync(m => m.TerpeneValueId == TerpeneValueId);

        if (TerpeneValue is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more details, see https://aka.ms/RazorPagesCRUD.
    public async Task UpdateTerpeneValue()
    {
        DB.Attach(TerpeneValue!).State = EntityState.Modified;

        try
        {
            await DB.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TerpeneValueExists(TerpeneValue!.TerpeneValueId))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/terpenevalues");
    }

    bool TerpeneValueExists(int terpenevalueid)
    {
        return DB.TerpeneValues.Any(e => e.TerpeneValueId == terpenevalueid);
    }
}
