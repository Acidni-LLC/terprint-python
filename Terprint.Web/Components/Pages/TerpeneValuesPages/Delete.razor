@page "/terpenevalues/delete"
@inject Terprint.Web.Data.TerprintWebContext DB
@using Terprint.Web.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TerpeneValues</h4>
    <hr />
    @if (terpenevalues is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Grower</dt>
            <dd class="col-sm-10">@terpenevalues.Grower</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@terpenevalues.Type</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Value</dt>
            <dd class="col-sm-10">@terpenevalues.Value</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Material</dt>
            <dd class="col-sm-10">@terpenevalues.Material</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">TerpName</dt>
            <dd class="col-sm-10">@terpenevalues.TerpName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Strain</dt>
            <dd class="col-sm-10">@terpenevalues.Strain</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Rating</dt>
            <dd class="col-sm-10">@terpenevalues.Rating</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@terpenevalues.Date</dd>
        </dl>
        <EditForm method="post" Model="terpenevalues" OnValidSubmit="DeleteTerpeneValues" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(terpenevalues is null)">Delete</button> |
            <a href="/terpenevalues">Back to List</a>
        </EditForm>
    }
</div>

@code {
    TerpeneValues? terpenevalues;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        terpenevalues = await DB.TerpeneValues.FirstOrDefaultAsync(m => m.Id == Id);

        if (terpenevalues is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteTerpeneValues()
    {
        DB.TerpeneValues.Remove(terpenevalues!);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/terpenevalues");
    }
}
